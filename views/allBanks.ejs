<div class="main_content">

    <%- include('common/header'); -%>

    <main>
        <div class="page_header">
            <div>
                <h1><%= title %></h1><br/>
                <!-- <small>Welcome ayt store. check reporting and review insights</small> -->
            </div>
        </div>

        <hr class="line">

          
    
