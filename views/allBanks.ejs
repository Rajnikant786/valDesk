                                    <a href="deleteBankById/<%= bank.bank_id %>"><i class="fas fa-trash-alt text-danger"></i></a>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <%= bank.status %>
                                    </div>
                                </td>
                                <!--<td>
                                    <form action="/ayt/orderStatus" method="POST">
                                        <div class="listSelect">
                                            <input type="hidden" name="order_id" value="<%= bank.order_id %>">
                                            <select name="status" value="<%= bank.status %>" onchange="this.form.submit()" >
                                                <option value="" >choose...</option>
                                                <option value="confirmed" <% if(bank.status == "confirmed") { %> selected <% } %>  >
                                                    Confirmed</option>
                                                <option value="cancel_order" <% if(bank.status == "cancel_order") { %> selected <% } %>  >
                                                        Cancel Order</option>    
                                                <option value="prepared" <% if(bank.status == "prepared") { %> selected <% }  %> >
                                                    Prepared</option>
                                                <option value="delivered" <% if(bank.status == "delivered") { %> selected <% }  %> >
                                                    Delivered
                                                </option>
                                                <option value="order_placed" <% if(bank.status == "order_placed") { %> selected <% }  %> >
                                                    Placed
                                                </option>
                                            </select>
                                        </div>    
                                    </form>

                                </td>-->
                                <td>
                                    <div>
                                        <%= bank.bank_id %>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <%= bank.bank_code %>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <%= bank.bank_name %>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <%= bank.bank_RO_address %>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <%= bank.bank_RO_DGM %>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <%= bank.bank_RO_number %>
                                    </div>
                                </td>
                                <td>
                                    <!-- <div>
                                        <%= bank.attachment_file %>
                                    </div> -->
                                    <div class="attachment_file">
                                        <a href="/uploadBankDetails/<%= bank.attachment_file %>" class="text-danger" download><%= bank.attachment_file %></a>
                                    </div>  
                                </td>
                                <td>
                                    <div>
                                        <%= bank.remarks %>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <%= bank.create_by %>
