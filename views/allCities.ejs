                                    <a href="deleteCityById/<%= city.city_id %>"><i class="fas fa-trash-alt text-danger"></i></a>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <%= city.status %>
                                    </div>
                                </td>
                                <!--<td>
                                    <form action="/ayt/orderStatus" method="POST">
                                        <div class="listSelect">
                                            <input type="hidden" name="order_id" value="<%= city.order_id %>">
                                            <select name="status" value="<%= city.status %>" onchange="this.form.submit()" >
                                                <option value="" >choose...</option>
                                                <option value="confirmed" <% if(city.status == "confirmed") { %> selected <% } %>  >
                                                    Confirmed</option>
                                                <option value="cancel_order" <% if(city.status == "cancel_order") { %> selected <% } %>  >
                                                        Cancel Order</option>    
                                                <option value="prepared" <% if(city.status == "prepared") { %> selected <% }  %> >
                                                    Prepared</option>
                                                <option value="delivered" <% if(city.status == "delivered") { %> selected <% }  %> >
                                                    Delivered
                                                </option>
                                                <option value="order_placed" <% if(city.status == "order_placed") { %> selected <% }  %> >
                                                    Placed
                                                </option>
                                            </select>
                                        </div>    
                                    </form>

                                </td>-->
                                <td>
                                    <div>
                                        <%= city.city_id %>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <%= city.city_code %>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <%= city.city_name %>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <%= city.remarks %>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <%= city.create_by %>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <%= city.create_date %>
                                    </div>
                                </td>
                            </tr>
                            <% }) %> 
                        </tbody>
                </table>

            </div>
        </div>  
    </main>
    
</div>    



